# Test Environment Variables
# This file is used during test execution

NODE_ENV=test

# Database (use test database or in-memory)
DATABASE_URL=postgresql://test:test@localhost:5432/unbuilt_test

# JWT Secrets (use different secrets for testing)
JWT_SECRET=test-jwt-secret-key-for-testing-only
JWT_REFRESH_SECRET=test-refresh-secret-key-for-testing-only

# Session Secret
SESSION_SECRET=test-session-secret-for-testing-only

# API Keys (use test keys or mock)
GEMINI_API_KEY=test-gemini-key
PERPLEXITY_API_KEY=test-perplexity-key
OPENAI_API_KEY=test-openai-key

# Stripe (use test keys)
STRIPE_SECRET_KEY=sk_test_example
STRIPE_PUBLISHABLE_KEY=pk_test_example

# SendGrid (use test key or mock)
SENDGRID_API_KEY=test-sendgrid-key

# OAuth (use test credentials or mock)
GITHUB_CLIENT_ID=test-github-client-id
GITHUB_CLIENT_SECRET=test-github-client-secret
GOOGLE_CLIENT_ID=test-google-client-id
GOOGLE_CLIENT_SECRET=test-google-client-secret

# Test Configuration
SUPPRESS_TEST_LOGS=true
TEST_TIMEOUT=10000

# Rate Limiting (relaxed for tests)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# Security (relaxed for tests)
BCRYPT_ROUNDS=4
MAX_LOGIN_ATTEMPTS=10
LOCKOUT_DURATION_MINUTES=1
